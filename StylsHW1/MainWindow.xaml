<Window x:Class="StylsHW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StylsHW1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button x:Name="addButton" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Height="45" Margin="10,10,0,0" Click="AddButton_Click"/>
        <Button x:Name="deleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Width="114" Height="45" Click="DeleteButton_Click"/>
        <Button x:Name="deleteButton1" Content="Удалить(оп. кол.)" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="114" Height="45" Click="DeleteButton1_Click"/>
        <TextBox x:Name="countTextBox" HorizontalAlignment="Left" Height="24" Margin="10,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114"/>
        <ListBox x:Name="itemsList" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="388" Grid.ColumnSpan="2" Margin="129,0,0,0"/>
    </Grid>
</Window>
